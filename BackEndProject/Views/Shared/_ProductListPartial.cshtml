@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @product.Author.Name
                </a>
                <h3><a href="product-details.html">@product.Title</a></h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="~/image/products/@product.MainImage" alt="">
                    <div class="hover-contents">
                        <a href="product-details.html" class="hover-image">
                            <img src="~/image/products/@product.HoverImage" alt="">
                        </a>
                        <div class="hover-btns">
                            <a class="single-btn basketBtn" asp-action="addbasket" asp-controller="basket" asp-route-id="@product.Id">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a asp-controller="product" asp-action="modal" asp-route-id="@product.Id" class="modalBtn" data-toggle="modal" data-target="#quickModal"
                           class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    @if (product.DiscountedPrice > 0)
                    {
                        <span class="price">£@product.Price</span>
                        <del class="price-old">£@product.DiscountedPrice</del>
                    }
                    else
                    {
                        <del class="price-old">£@product.Price</del>
                    }
                    <span class="price-discount">20%</span>
                </div>
            </div>
        </div>
    </div>
}